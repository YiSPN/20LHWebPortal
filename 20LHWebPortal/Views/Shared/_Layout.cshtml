    <!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fluttr - 20LH</title>

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,700,300' rel='stylesheet' type='text/css'>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Custom/animate.css" rel="stylesheet" />
    <link href="~/Content/Custom/buttons.min.css" rel="stylesheet" />
    <link href="~/Content/Custom/colors.min.css" rel="stylesheet"/>
    <link href="~/Content/site.css" rel="stylesheet" />
    <link href="~/Content/Custom/bootstrapOverrides.min.css" rel="stylesheet"/>
    <link href="~/Content/Custom/formComponents.min.css" rel="stylesheet"/>
    <link href="~/Content/Custom/uiComponents.min.css" rel="stylesheet"/>
    <link href="~/Content/Custom/mediaQueries.min.css" rel="stylesheet" />

    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<!--Site Content-->
<div id="contentWrap">
    <!--Desktop Nav + Header-->
    <header class="hidden-xs hidden-md">
        <div id="logo">
            <a href="/">
                <img src="~/Content/Images/Custom/20lh_logo.png" alt="20 Lets Hang Logo"/>
            </a>
        </div>
        <div id="desktopNav">
            @Html.Partial("menu")
        </div>
    </header>

    <!--Mobile Navigation-->
    <div class="visible-xs visible-md navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("20LH", "Upcoming", "Hangout", new {area = ""}, new {@class = "navbar-brand"})
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <!--Main Content Container-->
    <div class="container-fluid" id="mainContainer">
        @{
            if (ViewBag.HideTitle == null)
            {
                ViewBag.HideTitle = false;
            }
        }
        @if (!ViewBag.HideTitle)
        {
            <!--Page Title-->
            <div class="row" id="siteTitle">
                <div class="col-lg-12">
                    <h1>@ViewBag.Title</h1>
                </div>
            </div>
        }

        @RenderBody()

        @if (Request.IsAuthenticated)
        {
            <!---Action Buttons-->
            <div id="action-buttons">
                <a href="@Url.Action("Create", "Hangout")" id="add-activity">
                    <i class="fa fa-plus"></i>
                </a>

                <a href="@Url.Action("MyHangouts", "Hangout")">
                    <i class="fa fa-user"></i>
                </a>
            </div>
        }
    </div>
</div>

<!--Footer-->
<footer>
    <span>20LH Web Portal &copy; @DateTime.Now.Year</span>
</footer>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>