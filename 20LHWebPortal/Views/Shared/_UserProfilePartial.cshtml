/*      user profile
*/
.user-profile{
      display: inline-block;
      width: 350px;
      height: 400px;
      margin: 10px 0 0 10px;
      box-shadow: 1px 1px 5px rgba(0,0,0,0.3);
      overflow: hidden;
      background-color: #fff;
}
.user-profile .image{
      display: inline-block;
      width: 100%;
      height: 200px;
      padding: 25px 0;
      margin: auto;
      margin: auto;
      text-align: center;
}
.user-profile .image div{
      display: inline-block;
      width: 150px;
      height: 150px;
      border-radius: 50%;
      overflow: hidden;
}
.user-profile .image div img{
      display: inline-block;
      width: 150px;
      height: 150px;
      margin: auto;
}



.user-profile .name{
      display: inline-block;
      width: 100%;
      height: 100px;
      background-color: #fff;
}
.user-profile .name span{
      display: inline-block;
      width: 100%;
      font-size: 30px;
      text-align: center;
}


.user-profile .rating{
      display: inline-block;
      width: 100%;
      height: 20px;
      text-align: center;
}
.user-profile .rating span{
      display: inline-block;

}
.user-profile .rating span i.glyphicon{
      float: left;
      color: #4CAF50;
      font-size: 20px;
}


.user-profile .other-info{
      display: inline-block;
      width: 100%;
      height: 100px;
      background-color: #eee;
}
.user-profile .other-info .attended,
.user-profile .other-info .no-shows,
.user-profile .other-info .logout{
      display: inline-block;
      width: 33.33%;
      height: 100px;
      float: left;
      padding: 10px;
}
.user-profile .other-info .no-shows{
      border-left: 1px solid rgba(0, 0, 0, 0.1);
}
.user-profile .other-info label{
      display: inline-block;
      width: 100%;
}
.user-profile .other-info label ~ span{
      font-size: 30px;
}

.user-profile .other-info .logout{
      padding: 0;
}
.user-profile .other-info .logout button{
      display: inline-block;
      width: 100%;
      height: 100px;
      line-height: 100px;
      font-size: 18px;
      background-color: #4CAF50;
      color: #eee;
      border: none;
}
.user-profile .other-info .logout button:hover,
.user-profile .other-info .logout button:focus{
      background-color: #8BC34A;
}

</style>